<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginBottom="4dp"
    android:background="@drawable/bg_item_recylerview">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <!-- Image -->
        <ImageView
            android:id="@+id/img_item_photo"
            android:layout_width="117dp"
            android:layout_height="81dp"
            android:background="@drawable/rounded_image"
            android:clipToOutline="true"
            android:scaleType="centerCrop"
            tools:src="@tools:sample/avatars" />

        <!-- Text Content -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Title -->
            <TextView
                android:id="@+id/tv_item_name"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:layout_marginTop="0dp"
                android:fontFamily="@font/syne_regular"
                android:paddingTop="4dp"
                style="@style/MediumBlack14sp"
                android:textStyle="bold"
                tools:text="@string/text_title_item_article" />

            <!-- Description -->
            <TextView
                android:id="@+id/tv_item_description"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_marginTop="4dp"
                android:ellipsize="end"
                android:fontFamily="@font/syne_regular"
                android:maxLines="2"
                style="@style/RegularGrey8sp"
                tools:text="@string/text_description_item_article" />

            <!-- Created At -->
            <TextView
                android:id="@+id/tv_item_created_at"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:ellipsize="end"
                android:fontFamily="@font/syne_regular"
                style="@style/RegularGrey7sp"
                tools:text="@string/text_created_at_item_article" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
